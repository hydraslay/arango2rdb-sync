{
  "arango": {
    "host": "localhost",
    "port": 8529,
    "user": "root",
    "password": "arango2rdb",
    "database": "project_graph"
  },
  "rdb": {
    "jdbcUrl": "jdbc:postgresql://localhost:5432/project_sync",
    "user": "postgres",
    "password": "postgres"
  },
  "merges": [
    {
      "name": "teams",
      "targetTable": "teams",
      "mainCollection": "teams",
      "keyColumn": "team_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "team_id",
        "main.name": "name",
        "main.leadMemberId": "lead_member_id"
      },
      "joins": []
    },
    {
      "name": "members",
      "targetTable": "members",
      "mainCollection": "members",
      "keyColumn": "member_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "member_id",
        "main.firstName": "first_name",
        "main.lastName": "last_name",
        "main.email": "email",
        "main.role": "role",
        "main.teamId": "team_id"
      },
      "joins": []
    },
    {
      "name": "projects",
      "targetTable": "projects",
      "mainCollection": "projects",
      "keyColumn": "project_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "project_id",
        "main.name": "name",
        "main.description": "description",
        "main.status": "status",
        "main.teamId": "team_id",
        "main.startDate": "start_date",
        "main.endDate": "end_date"
      },
      "joins": []
    },
    {
      "name": "tasks",
      "targetTable": "tasks",
      "mainCollection": "tasks",
      "keyColumn": "task_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "task_id",
        "main.projectId": "project_id",
        "main.name": "name",
        "main.status": "status",
        "main.dueDate": "due_date",
        "main.assignedTeamId": "assigned_team_id"
      },
      "joins": []
    },
    {
      "name": "task_assignments",
      "targetTable": "task_assignments",
      "mainCollection": "task_assignments",
      "keyColumn": "assignment_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "assignment_id",
        "main.taskId": "task_id",
        "main.memberId": "member_id",
        "main.hoursPlanned": "hours_planned",
        "main.hoursActual": "hours_actual"
      },
      "joins": []
    },
    {
      "name": "milestones",
      "targetTable": "milestones",
      "mainCollection": "milestones",
      "keyColumn": "milestone_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "milestone_id",
        "main.projectId": "project_id",
        "main.name": "name",
        "main.targetDate": "target_date",
        "main.status": "status"
      },
      "joins": []
    },
    {
      "name": "project_overview",
      "targetTable": "project_overview",
      "mainCollection": "projects",
      "keyColumn": "project_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "project_id",
        "main.name": "project_name",
        "team.name": "team_name",
        "health.status": "health_status",
        "health.updatedAt": "health_updated_at"
      },
      "joins": [
        {
          "alias": "team",
          "collection": "teams",
          "localField": "main.teamId",
          "foreignField": "_key",
          "required": true
        },
        {
          "alias": "health",
          "collection": "project_health",
          "localField": "main._key",
          "foreignField": "projectId",
          "required": false
        }
      ]
    },
    {
      "name": "project_observations",
      "targetTable": "project_observations",
      "mainCollection": "projects",
      "keyColumn": "project_id",
      "keyField": "main._key",
      "fieldMappings": {
        "main._key": "project_id",
        "main.name": "project_name",
        "obs.name": "observer_name"
      },
      "joins": [
        {
          "connectedEdges": [{
            "collection": "project_observer_edges",
            "direction": "from-to"
          }],
          "alias": "obs",
          "collection": "observers",
          "required": true
        }
      ]
    }
  ]
}
